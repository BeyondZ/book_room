<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yzx.mapper.admin.LogMapper">
    <insert id="addLog" parameterType="log">
        insert into log(content,createTime) values(#{content},#{createTime});
    </insert>

    <delete id="delete" parameterType="int">
        delete from log where id=#{id}
    </delete>

    <select id="findList" parameterType="map" resultType="log">
       select * from log where 1=1
       <if test="name != null">and content like '%${content}%'</if>
        <if test="pageSize!=null">limit #{pageSize} </if>
        <if test="offset!=null">offset #{offset}</if>
    </select>

    <select id="getTotalNum" parameterType="map" resultType="int">
       select count(*) from log where 1=1
       <if test="name != null">and content like '%${content}%'</if>
    </select>

    <select id="find" resultType="log" parameterType="date">
        select * from log where createTime> #{date}
    </select>

</mapper>